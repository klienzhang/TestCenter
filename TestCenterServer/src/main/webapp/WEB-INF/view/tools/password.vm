<script type="text/javascript">
    $(function(){
        $(document).ready(function(){
            $("#mobile").empty();
        });

        $("#changepassword").click(function(){
            if($('#mobile').val()==""){
                $('#result').html("请输入需要修改的手机号码");
                $('#mobile').focus();
                return false;
            }

            var jsonobject = {
                mobile: $("#mobile").val(),
                env:$("input[name=optionsRadios]:checked").val()
            };
        });
    });
</script>
